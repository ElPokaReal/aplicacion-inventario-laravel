{
  "name": "sistema-inventario-mi-angel",
  "private": true,
  "version": "1.0.7",
  "description": "Sistema de Gestión de Inventario - Comercializadora Mi Ángel",
  "author": "Comercializadora Mi Ángel",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "generate-icon": "node scripts/generate-icon.js",
    "generate-icon:multi": "node scripts/generate-icon-multi.js",
    "generate-icon:ico": "node scripts/generate-icon-ico.js",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.1",
    "@tanstack/react-table": "^8.21.3",
    "axios": "^1.10.0",
    "exceljs": "^4.4.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.7.0",
    "recharts": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "core-util-is": "^1.0.3",
    "cross-env": "^10.1.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.1",
    "to-ico": "^1.0.1",
    "vite": "^7.0.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.miangel.inventario",
    "productName": "Inventario Mi Ángel",
    "copyright": "Copyright © 2025 Comercializadora Mi Ángel",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "public/icon.ico",
      "!node_modules/**/*",
      "!src/**/*"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "differentialPackage": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/app-icon.ico",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/app-icon.ico",
      "category": "Office"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ]
  }
}
